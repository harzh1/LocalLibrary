<html>
  <%- include('header') %>
  <body>
    <div class="container-fluid">
      <div class="row">
        <div class="col-sm-2"><%- include('navbar')%></div>
        <div class="col-sm-10">
            <h1><%= title %></h1>

            <form method="POST">
              <div class="form-group">
                <label for="name">Genre:</label>
                <input 
                  id="name" 
                  class="form-control" 
                  type="text" 
                  placeholder="Fantasy, Poetry etc." 
                  name="name" 
                  required 
                  value="<%= typeof genre === 'undefined' ? '' : genre.name %>"
                >
              </div>
              <button class="btn btn-primary" type="submit">Submit</button>
            </form>
          
            <% if (errors) { %>
              <ul>
                <% errors.forEach(function(error) { %>
                  <li><%= error.msg %></li>
                <% }) %>
              </ul>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>

