<html>
  <%- include('header') %>
  <body>
    <div class="container-fluid">
      <div class="row">
        <div class="col-sm-2"><%- include('navbar')%></div>
        <div class="col-sm-10">
          <h1><%=title%></h1>
          <% if (book_list.length) { %>
          <ul>
            <% book_list.forEach(function(book) { %>
            <li>
              <a href="<%= book.url %>"><%= book.title %></a> (<%=
              book.author.name %>)
            </li>
            <% }) %>
          </ul>
          <% } else { %>
          <p>There are no books.</p>
          <% } %>
        </div>
      </div>
    </div>
  </body>
</html>
